# ============================================================================
# Atrévete Bot - Environment Variables Template
# ============================================================================
# IMPORTANT: Copy this file to .env and replace placeholders with real values
# NEVER commit .env file to git - it contains sensitive credentials
# ============================================================================

# ----------------------------------------------------------------------------
# Google Calendar API
# ----------------------------------------------------------------------------
# Get from: https://console.cloud.google.com/iam-admin/serviceaccounts
# Instructions: Create service account → Download JSON key → Store securely
GOOGLE_SERVICE_ACCOUNT_JSON=/path/to/service-account-key.json
GOOGLE_CALENDAR_IDS=calendar1@group.calendar.google.com,calendar2@group.calendar.google.com,calendar3@group.calendar.google.com,calendar4@group.calendar.google.com,calendar5@group.calendar.google.com

# ----------------------------------------------------------------------------
# Stripe Payment API
# ----------------------------------------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_, sk_test_) for development
# Use live keys (pk_live_, sk_live_) for production
STRIPE_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here
STRIPE_API_VERSION=2024-11-20.acacia  # Or latest stable version

# ----------------------------------------------------------------------------
# Chatwoot API
# ----------------------------------------------------------------------------
# Get from: https://app.chatwoot.com/app/accounts/{account_id}/settings/profile
# Or your self-hosted instance URL
# CHATWOOT_API_URL: Base URL for your Chatwoot instance (cloud or self-hosted)
# CHATWOOT_API_TOKEN: API access token (Settings → Profile → Access Token)
# CHATWOOT_ACCOUNT_ID: Your account ID (visible in URL)
# CHATWOOT_INBOX_ID: WhatsApp inbox ID (Settings → Inboxes)
# CHATWOOT_TEAM_GROUP_ID: Team WhatsApp group conversation ID (for escalations)
# CHATWOOT_WEBHOOK_TOKEN: Secret token for webhook URL authentication
#   - Generate with: openssl rand -hex 24
#   - Configure in Chatwoot: https://your-domain.com/webhook/chatwoot/{token}
#   - Minimum 24 characters recommended for security
#   - Example: j6gzStex3yw16AXBgzq3ARTq
CHATWOOT_API_URL=https://app.chatwoot.com  # Or self-hosted URL
CHATWOOT_API_TOKEN=your_api_access_token_here
CHATWOOT_ACCOUNT_ID=12345
CHATWOOT_INBOX_ID=67890
CHATWOOT_TEAM_GROUP_ID=conversation_id_for_team_group
CHATWOOT_WEBHOOK_TOKEN=j6gzStex3yw16AXBgzq3ARTq

# ----------------------------------------------------------------------------
# Anthropic Claude API
# ----------------------------------------------------------------------------
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your_api_key_here

# ----------------------------------------------------------------------------
# Database (configured in Story 1.2, Story 1.3a)
# ----------------------------------------------------------------------------
# For Docker Compose, use 'postgres' as hostname; for local dev outside Docker, use 'localhost'
# Alembic will use DATABASE_URL for migrations (automatically converts asyncpg to psycopg)
POSTGRES_DB=atrevete_db
POSTGRES_USER=atrevete
POSTGRES_PASSWORD=changeme_min16chars_secure_password
DATABASE_URL=postgresql+asyncpg://atrevete:changeme_min16chars_secure_password@postgres:5432/atrevete_db

# ----------------------------------------------------------------------------
# Redis (configured in Story 1.2)
# ----------------------------------------------------------------------------
# For Docker Compose, use 'redis' as hostname; for local dev outside Docker, use 'localhost'
REDIS_URL=redis://redis:6379/0

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
TIMEZONE=Europe/Madrid
LOG_LEVEL=INFO
